<!-- first modal window -->
<header class="modal-header">
    <a href="#" class="close" data-dismiss="modal">x</a>
    <h6>Add a Roadmap</h6>
</header>

<div class="modal-body">
    <form id="addProject" action="/new-project" method="post" name="newProject">
        <table>
            <tr>
                <td><label for="nameProject">Name :</label></td><td colspan="3"><input type="text" name="nameProject" id="nameProject"/></td>
            </tr>
            <tr>
                <td><label for="descProject">Description :</label><td colspan="3"><textarea name="descProject" id="descProject" rows="3"></textarea></td>
            </tr>
            <tr id="lastRowAddProject">
                <td><label for="descProject">Members :</label><td colspan="2"><input type="text" name="membersProject[]" id="memberProject"/></td><td class="addMember"><span id="arrowMemberAddProject" onclick="javascript:toolBarAddMember('lastRowAddProject');">+</span></td>
            </tr>
        </table>
    </form>
</div>

<footer class="modal-footer">
    <a href="#" class="btn btn-primary" id="okwin01" onclick="$('.modal-body > form').submit();">Create</a>
</footer>